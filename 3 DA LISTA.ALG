Algoritmo "3 DA LISTA

Var
   // Seção de Declarações das variáveis
   num:real
   i:inteiro
   den:real
   soma:real

Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...
   soma<- 0
   num <- -1

   para i de 1 ate 50 faca
      den <- i
      soma <- soma + (num+2)/den
   fimpara

   escreval ("Soma = ", soma)

Fimalgoritmo